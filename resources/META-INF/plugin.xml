<idea-plugin>
  <id>codes.rudolph.idea.cfg</id>
  <name>Context Free Grammar</name>
  <version>0.1.1</version>
  <vendor email="jonas.ru@gmx.de" url="http://www.rudolph.codes">Jonas Rudolph</vendor>

  <description><![CDATA[
      Adds support for EBNF-like context free grammars.<br>
      This plugin currently is ment for working with grammars in the specification and/or documentation phase.<br>
      For a detailed description read the <a href="https://github.com/JonasRudolph/idea-plugin-context-free-grammar/blob/master/README.md">README</a>.<br>
      Read the <a href="https://github.com/JonasRudolph/idea-plugin-context-free-grammar/blob/master/TODO.md">TODO-List</a> for knowing what I will add or might add in future releases.<br>
      Made by <a href="http://www.rudolph.codes">Jonas Rudolph</a>
    ]]></description>

  <change-notes><![CDATA[
      Read the <a href="https://github.com/JonasRudolph/idea-plugin-context-free-grammar/blob/master/CHANGELOG.md">Change Log</a>.
    ]]>
  </change-notes>

  <!-- http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html -->
  <idea-version since-build="145.0"/>

  <!-- http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
      <fileTypeFactory implementation="codes.rudolph.idea.cfg.CfgFileTypeFactory"/>
      <lang.parserDefinition language="CfgLanguage" implementationClass="codes.rudolph.idea.cfg.CfgParserDefinition"/>
      <lang.syntaxHighlighterFactory language="CfgLanguage" implementationClass="codes.rudolph.idea.cfg.CfgSyntaxHighlighterFactory"/>
      <colorSettingsPage implementation="codes.rudolph.idea.cfg.CfgColorSettingsPage"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>
</idea-plugin>
